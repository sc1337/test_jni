<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.soundcloud.challenge.streamer.LauncherActivity">

    <TextView
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"/>

    <TextView
        android:text="User messages: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test"
        android:id="@+id/title_user"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_user"
        android:layout_alignBottom="@id/title_user"
        android:id="@+id/value_user"/>

    <TextView
        android:text="System messages: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_user"
        android:id="@+id/title_system"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_system"
        android:layout_alignBottom="@id/title_system"
        android:id="@+id/value_system"/>

    <TextView
        android:text="Log messages: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_system"
        android:id="@+id/title_log"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_log"
        android:layout_alignBottom="@id/title_log"
        android:id="@+id/value_log"/>

</RelativeLayout>
